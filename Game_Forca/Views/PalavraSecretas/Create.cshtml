@model PalavraSecreta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PalavraSecreta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Palavras" class="control-label"></label>
                <input asp-for="Palavras" class="form-control" />
                <span asp-validation-for="Palavras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriasList">
                    <option disabled selected>-- Escolha uma Categoria --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
